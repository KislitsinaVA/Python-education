from itertools import count, cycle
for num in count(3, 4):
    if num == 15:
        break

    print(num)
count = 0
my_text = ('Пусть бегут неуклюже пешеходы по лужам, а вода по асфальту').split()
for word in cycle(my_text):
    if count == 20:
        break
    count +=1


    print(word, end=' ')